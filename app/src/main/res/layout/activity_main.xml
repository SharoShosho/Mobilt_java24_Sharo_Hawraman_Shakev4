<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Accelerometer Data"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- X-axis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X-axis:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accelXTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X: 0.00" />

    <ProgressBar
        android:id="@+id/xProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:max="20" />

    <!-- Y-axis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Y-axis:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accelYTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Y: 0.00" />

    <ProgressBar
        android:id="@+id/yProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:max="20" />

    <!-- Z-axis -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Z-axis:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/accelZTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Z: 0.00" />

    <ProgressBar
        android:id="@+id/zProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:max="20" />

    <SeekBar
        android:id="@+id/thresholdSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="20"
        android:progress="12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Shake Sensitivity" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/refresh_background"
        android:text="Reset Max Values" />

    <TextView
        android:id="@+id/maxValuesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Max values: X=0.00, Y=0.00, Z=0.00" />

</LinearLayout>